/* 头部 */
header{
    height: 112px;
    background-color:pink ;
}

header .top{
    height: 28px;
    line-height: 28px;
    background-color: #101010;
}

header .top .txturl{
    color: #e6e6e6;
    font-size: 18px;
    text-indent: 210px;
}

header .top .logintxtbox{
    color: #bfbfbf;
}

header .top .logintxtbox a{
    color: #f60;
}

/* logo */
header .top div:first-child{
    position: relative;
}

header .top h1{
    position: absolute;
    top: 0;
    margin: 0;
}


/* 搜索框 */
header .searchbox form{
    width: 440px;
    height: 36px;
    background-color: #ffffff;
    border: 1px solid #ff6600;
    box-sizing: border-box;
}

header .searchbox form input:first-child{
    width: 388px;
    height: 32px;
    text-indent: 8px;
}

/* 提交按钮 */
header .searchbox form input:last-child{
    width: 48px;
    height: 32px;
    cursor: pointer;
    background: url(../img/bgicon.png) no-repeat ;
}

/* 购物车和订单 */
header .searchbox .cartorder{
    width: 200px;
    height: 36px;
    margin-left: 36px;
}

header .searchbox .cartorder a{
    width: 100px;
    height: 36px;
    line-height: 36px;
    text-align: center;
}

/* 购物车 */
header .searchbox .cartorder a:first-child{
    text-indent: 36px;
    color: #ffffff;
    background: url(../img/bgicon.png) no-repeat 0px -42px #ff6600;
}

header .searchbox .cartorder a:first-child i{
    font-style:normal ;
    font-size: 16px;
}

header .searchbox .cartorder a:last-child{
    color: #808080;
    font-size: 16px;
    background-color: #ebebeb;
    border: 1px solid #cccccc;
    width: 100px;

/* border-box:
width:该值包含了border和padding以及内容区域的宽度
content-box:[默认]
width:只表示内容区域的宽度 */
    box-sizing: border-box;
}

header nav ul{
    margin-right: 110px;
    padding-top: 20px;
    list-style: none;
}

header nav li{
    float: left;
    list-style: 24px;
    margin-left: 30px;
    /* margin-left: 45px; */

}

header nav li a{
    font-size: 16px;
    color: #323232;
}

#banner{
    height: 430px;
    background-color: yellowgreen;
}

/* 左边的ul */
#banner .list{
    width: 200px;
    height: 430px;
    background-color: #ccc;
    position: relative;
}

#banner .list> li{

    list-style: none;
    line-height: 28px;
}

#banner .list >li:hover>.menu{
    display: block;
}

#banner .list >li>.menu{
    position: absolute;
    left: 200px;
    top: 0;
    width: 400px;
    height: 420px;
    background-color: #fff;
    display: none;
    border: 1px solid #f60;
    z-index: 101;
}

#banner .list >li> li:hover p{
    width: 180px;
    background-color: #ffffff;
    border-color: #f60;
    border-right: 0;
}

#banner .list> li> p{
    position: relative;
    z-index: 102;
    padding-left: 20px;
    border: 1px solid transparent;
}

#banner .list >li>a{
    color: #1a1a1a;
    font-family: MicrosoftYaHei ;
}


/* 右边的轮播 */
#banner .slidebox{
    width: 1000px;
    height: 430px;
    background-color: yellow;
}



