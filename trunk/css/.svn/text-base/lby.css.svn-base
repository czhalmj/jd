 .moshou{
margin-left: 180px;

}

/* 乐购区域 */
#lg .com-title ul li{
    width: 260px;
}

#lg .tushu{
    border-bottom:6px solid #f60;
}

#lg .byx ul li{
    float: left;
    list-style: none;
    margin: 0 40px;
    padding: 5px;
    margin-left: 38px;
}

#lg .byx ul li:hover{
    background-color: silver;
    cursor: pointer;
}


/* 新书上架区域 */
#xs .com-title{
    border-bottom:6px solid #f60;
}

#xs .leftxs{
    width: 900px;
    height: 500px;
    border: 1px solid red;
}


#xs .leftxs ul li{
    width: 180px;
    float: left;
    line-height: 27px;
    height: 252px;
    list-style: none;
    text-align: center;
    cursor: pointer;
}
#xs .leftxs ul li:hover{
    background-color: silver;
}


/* 主编推荐 */
#xs .rightbox{
    width: 280px;

    border: 1px solid #ccc;
    margin-left: 10px;
    height: 500px;
}

#xs .rightbox h4{
    line-height: 38px;
    color: #808080;
}
#xs .rightbox ul li{
    border-bottom: 1px solid #ccc;
    font-size: 16px;
    color: #4d4d4d;
    list-style: none;
    position: relative;
    line-height: 28px;

}
#xs .rightbox ul li:last-child{
   border: 0;
}
#xs .xs-right ul li .title.curtitle{
    display: none;
}

#xs .rightbox ul li div{
    display: none;
}
#xs .rightbox ul li div.cur{
    display: block;
}

#xs .rightbox ul li span{
    position: absolute;
    left: -10px;
    top: 5px;
}

#xs .rightbox ul li p{
    list-style: 20px;
    color: #404040;
    padding: 5px;
}


/* 独家提供区域 */
#djtg .com-title ul li{
    list-style: none;
    width: 100px;
    height: 32px;
    text-align: center;
    line-height: 32px;

}
#djtg .com-title{
        border-bottom:6px solid #f60;
}
#djtg .com-title span{
    line-height: 32px;
    height: 34px;
}

#djtg .tg {
    padding: 0 36px 0 36px;
}


#djtg .tg .tg2{
    display: none;
}
#djtg .tg .tg2.cur{
    display: block;
}

#djtg .tg .tg2 .slidebox>ul>li>ul>li{
    width: 170px;
    height: 220px;
    list-style: none;
}
#djtg .tg a {
    list-style: none;
    float: left;
}

#djtg .tg .tg2 .slidebox>ul>li>ul>li p{
    line-height: 24px;
}
#djtg .tg .tg2 .slidebox>ul>li>ul>li p img{
    width: 150px!important;
    height: 150px!important;
}

#djtg .tg .ab{
    border: 6px solid red;
}
