$('#ebook .leftbox .com-title li').mouseenter(function () {
    $(this).addClass('active').siblings().removeClass('active')
    let index = $(this).index();
    $('#ebook .leftbox .con').eq(index).addClass('cur').siblings().removeClass('cur')
})


// 新书畅销榜
$('#ebook .rightbox ul li').mouseenter(function () {
    $(this).find('div').show();
    $(this).find('title').hide();
    $(this).siblings().find('div').hide();
    $(this).siblings().find('title').show();
})


